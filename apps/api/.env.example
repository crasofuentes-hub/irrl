# IRRL Environment Configuration

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/irrl
DB_POOL_SIZE=10

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=*

# Instance Cryptographic Keys (Ed25519)
# Generate with: node -e "console.log(require('crypto').generateKeyPairSync('ed25519', {publicKeyEncoding:{type:'spki',format:'pem'},privateKeyEncoding:{type:'pkcs8',format:'pem'}}))"
INSTANCE_PRIVATE_KEY=
INSTANCE_PUBLIC_KEY=

# Features
ENABLE_AUDIT_LOG=true
LOG_QUERIES=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache
REPUTATION_CACHE_TTL_MS=300000

# External APIs (Optional)
GITHUB_TOKEN=
